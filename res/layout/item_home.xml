<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_home_selector"
	android:paddingTop="12dp"
	android:paddingRight="8dp"
	android:paddingLeft="8dp"
	android:paddingBottom="12dp" >

    <ImageView
        android:id="@+id/item_home_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/rjgj" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_home_iv_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_home_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AA000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_home_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#99000000"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>